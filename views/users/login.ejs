<% layout("/layouts/boilerplate.ejs")%>

<div class="row mt-3 md-3">
    <div class="col-6 offset-3 ">
      <h2 >Login to your account</h2>    
<form method="POST" action="/login" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Enter Username</label>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">@</span>
        <input type="text" name="username" class="form-control" id="username" placeholder="JohnDoe123" required>    
        </div>
        <div class="invalid-feedback">Enter username here.</div>
      </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" name="password" class="form-control" id="password" required>
    <div class="invalid-feedback">Enter password here</div>
  </div>
  <button type="submit" class="btn add-btn">Submit</button>
</form>
    
</div>
</div>
